{
  "name": "@mmpzet/contribution-tools",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ignore-path .gitignore '**/*.js'",
    "lint:ci": "eslint --format junit --output-file ./reports/eslint/results.xml --ignore-path .gitignore '**/*.js'",
    "test": "jest",
    "semantic-release": "semantic-release"
  },
  "release": {
    "extends": "./semantic-release"
  },
  "homepage": "https://github.com/mmpzet/contribution-tools",
  "repository": {
    "type": "git",
    "url": "https://github.com/mmpzet/contribution-tools.git"
  },
  "author": "Marco Massarotto <massa84@gmail.com>",
  "license": "Apache-2.0",
  "config": {
    "commitizen": {
      "path": "./commitizen"
    }
  },
  "commitlint": {
    "extends": [
      "./commitlint"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HSUKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "peerDependencies": {
    "semantic-release": "^15.1.5"
  },
  "devDependencies": {
    "@commitlint/lint": "8.1.0",
    "@commitlint/load": "8.1.0",
    "commitlint": "8.1.0",
    "eslint": "5.16.0",
    "eslint-config-canonical": "10.3.2",
    "husky": "3.0.3",
    "jest": "24.8.0",
    "jest-junit": "7.0.0",
    "jest-snapshot-serializer-function-name": "1.1.0",
    "lint-staged": "9.2.1",
    "semantic-release": "15.13.21"
  },
  "dependencies": {
    "@semantic-release/exec": "^3.3.2",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.5",
    "app-root-path": "^2.0.1",
    "chalk": "^2.3.2",
    "compare-func": "^1.3.2",
    "inquirer": "^6.2.2",
    "rxjs": "^6.4.0",
    "sync-request": "^6.0.0",
    "word-wrap": "^1.2.3"
  }
}
